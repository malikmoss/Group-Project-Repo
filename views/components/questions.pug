.container__questions
    .container__ask
        input(type="text").new-question
        button.que__add Add to queue
    .container__que-list
        for que in ques
            div(id=`que-${que.queId}`).que
                .que__user
                    //- p Asked by #{que.queAuthor}
                    if que.authorId == user.id
                        .que__buttons
                            i(title='Edit Question').far.fa-edit.que__edit
                            i(title='Delete Question').far.fa-trash-alt.que__delete
                .que__body
                    a(href=`questions/${que.queId}`): b= que.queBody
                    for answer in que.answers
                        .que__answer
                            p Answered by #{answer.ansAuthor}
                            p= answer.ansBody

                .que__vote
                    p= que.numUpvotes
                    p= que.numDownvotes
