.container__questions
    .questions__ask
        input(type="text").new-question
        button.que__add Post your que
    .questions__que-list
        for que in ques
            div(id=`que-${que.queId}`).que
                .que__user
                    if que.answers[0]
                        p Answered by
                            b  #{que.answers[0].ansAuthor}
                    else
                        p Asked by
                            b  #{que.queAuthor}
                        .que__buttons
                            i(title='Edit Question').far.fa-edit.que__edit
                            i(title='Delete Question').far.fa-trash-alt.que__delete
                .que__body
                    b= que.queBody
